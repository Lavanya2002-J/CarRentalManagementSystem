@model LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ceyloan Travels</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/A.Login.css" asp-append-version="true" />
</head>
<body>

    <header class="app-header">
        <div class="header-logo">
            Ceyloan Travels
        </div>
    </header>

    <main>
        <div class="login-panel text-center">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <div class="login-header">
                <h3>Welcome Back, Admin</h3>
            </div>

            <div class="alert alert-info bg-transparent border-info text-info small p-2 text-center mb-4">
                Good Afternoon! It's currently Wednesday, 1:50 PM in Sri Lanka.
            </div>

            <form asp-action="AdminLogin" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username or Email" />
                    <label asp-for="UsernameOrEmail">Username or Email</label>
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4 text-start">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="rememberMeCheck">
                        <label class="form-check-label" for="rememberMeCheck">
                            Remember me
                        </label>
                    </div>
                    <a href="#" class="forgot-password">Forgot password?</a>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Sign In" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>