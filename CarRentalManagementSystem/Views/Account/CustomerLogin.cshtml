@model LoginViewModel
@{
    ViewData["Title"] = "CustomerLogin";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        <div class="card mt-4">
            <div class="card-header text-center"><h3> Login </h3></div>
            <div class="card-body">
                <form asp-action="CustomerLogin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username" />
                        <label asp-for="UsernameOrEmail"></label>
                        <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Register">Don't have an account? Register here</a>
            </div>
        </div>
    </div>
</div>