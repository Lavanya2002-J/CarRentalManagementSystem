@{
    // This C# block remains the same.
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - YourApp</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Forgot Password Confirmation.css" asp-append-version="true" />

</head>
<body>

    <div class="content-card">
        <div class="icon">📧</div>
        <h2>Check Your Inbox</h2>
        <p>If an account with your email exists, we have sent a link to reset your password. Please check your spam folder if you don't see it.</p>

        <a asp-action="CustomerLogin" class="action-link">Back to Login</a>
    </div>

</body>
</html>