@model CarRentalManagementSystem.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Manage Profile";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/ManageProfile.css" asp-append-version="true" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="page-header mb-4 text-center">
                <h2 class="fw-bold"><i class="bi bi-person-circle me-2" style="color:#00d9ff;"></i>Manage Your Profile</h2>
                <p class="text-white-50">Keep your personal and security information up to date.</p>
                
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-glass-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="card glass-panel">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <h5>Personal Information</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="CustomerName" class="form-control" placeholder="Full Name" />
                                    <label asp-for="CustomerName">Full Name</label>
                                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Username" class="form-control" placeholder="Username" />
                                    <label asp-for="Username"></label>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                    <label asp-for="PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Address" />
                            <label asp-for="Address"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="NIC" class="form-control" placeholder="NIC" />
                                    <label asp-for="NIC"></label>
                                    <span asp-validation-for="NIC" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="LicenseNo" class="form-control" placeholder="License No" />
                                    <label asp-for="LicenseNo">License No</label>
                                    <span asp-validation-for="LicenseNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <h5>Change Password</h5>
                        <p class="text-muted small">Only fill out these fields if you want to change your password.</p>

                        <div class="form-floating mb-3">
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Current Password" />
                            <label asp-for="OldPassword">Current Password</label>
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                            <label asp-for="NewPassword">New Password</label>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                            <label asp-for="ConfirmNewPassword">Confirm New Password</label>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-save-fill me-2"></i>Save Changes</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}