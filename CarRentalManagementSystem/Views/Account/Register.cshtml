@model CarRentalManagementSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnicomTIC Travels</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
</head>
<body>

    <header class="app-header">
        <div class="header-logo">
            UnicomTIC Travels
        </div>
    </header>

    <main>
        <div class="register-panel">

            <div class="login-header text-center mb-4">
                <h3>Create Your Account</h3>
                <p class="text-white-50 small">Join us to start your journey across Sri Lanka.</p>
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-section">
                    <h4 class="form-section-header">Account Credentials</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Username" class="form-control" placeholder="Username" />
                                <label asp-for="Username"></label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <label asp-for="Email"></label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="password-wrapper form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="passwordInput" />
                                <label asp-for="Password"></label>
                                <button class="btn password-toggle-btn" type="button" id="togglePassword">
                                    <i class="fa-solid fa-eye-slash"></i>
                                </button>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="password-wrapper form-floating mb-3">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" id="confirmPasswordInput" />
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <button class="btn password-toggle-btn" type="button" id="toggleConfirmPassword">
                                    <i class="fa-solid fa-eye-slash"></i>
                                </button>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h4 class="form-section-header">Personal & Contact Information</h4>
                    <div class="form-floating mb-3">
                        <input asp-for="CustomerName" class="form-control" placeholder="Full Name" />
                        <label asp-for="CustomerName">Full Name</label>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                                <label asp-for="PhoneNumber">Phone Number</label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="NIC" class="form-control" placeholder="NIC Number" />
                                <label asp-for="NIC">NIC Number</label>
                                <span asp-validation-for="NIC" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Address" class="form-control" placeholder="Address" />
                        <label asp-for="Address"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="LicenseNo" class="form-control" placeholder="License No" />
                        <label asp-for="LicenseNo">Driving License No</label>
                        <span asp-validation-for="LicenseNo" class="text-danger"></span>
                    </div>
                </div>


                <div class="d-grid mt-4">
                    <input type="submit" value="Register" class="btn btn-success btn-lg" />
                </div>

                <div class="text-center mt-4">
                    <a asp-action="CustomerLogin" class="forgot-password">Already have an account? Log In</a>
                </div>
            </form>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
     <script src="~/js/Register.js" asp-append-version="true"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>