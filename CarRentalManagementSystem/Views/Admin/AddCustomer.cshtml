@model CarRentalManagementSystem.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Add New Customer";
}

<div class="container mt-4">
    <h3>Add New Customer</h3>
    <p>Create a new customer account manually.</p>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="AddCustomer" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerName" class="form-label"></label>
                        <input asp-for="CustomerName" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NIC" class="form-label"></label>
                        <input asp-for="NIC" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LicenseNo" class="form-label"></label>
                        <input asp-for="LicenseNo" class="form-control" />
                    </div>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Create Customer" class="btn btn-success" />
                    <a asp-action="ManageCustomers" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}