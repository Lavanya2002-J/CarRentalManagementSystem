@model CarRentalManagementSystem.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Add New Customer";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/AddCustomer.css" asp-append-version="true" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="page-header text-center mb-4">
                <h3 class="fw-bold"><i class="bi bi-person-plus-fill me-2" style="color:#00d9ff;"></i>Add New Customer</h3>
                <p>Create a new customer account manually.</p>
                
            </div>

            <div class="card glass-panel">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="AddCustomer" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="CustomerName" class="form-control" placeholder="Full Name" />
                                    <label asp-for="CustomerName">Full Name</label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Username" class="form-control" placeholder="Username" />
                                    <label asp-for="Username"></label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                    <label asp-for="Password"></label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                            <label asp-for="PhoneNumber">Phone Number</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Address" />
                            <label asp-for="Address"></label>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="NIC" class="form-control" placeholder="NIC" />
                                    <label asp-for="NIC"></label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="LicenseNo" class="form-control" placeholder="License No" />
                                    <label asp-for="LicenseNo">License No</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <input type="submit" value="Create Customer" class="btn btn-success w-100" />
                            <a asp-action="ManageCustomers" class="btn btn-secondary w-100 mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-sm btn-outline-light">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @{
        // The previewImage script was not used on this page, so it has been removed.
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}