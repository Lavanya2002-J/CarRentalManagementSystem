@model CarRentalManagementSystem.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/A.Dash.css" asp-append-version="true" />

<div class="container-fluid mt-4">

    <div class="d-sm-flex align-items-center justify-content-between mb-4 animate__animated animate__fadeIn">
        <div>
            <h1 class="h3 mb-1 text-gray-800">Admin Dashboard</h1>
            <p class="text-muted small mb-0">
                Welcome back! It's currently 1:54 PM on Wednesday in Sri Lanka.
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-primary h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2 text-start">
                            <div class="text-xs fw-bold text-primary-light text-uppercase mb-1">Revenue (This Month)</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">LKR @Model.MonthlyRevenue.ToString("N0")</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-dollar-sign fa-2x"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-success h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2 text-start">
                            <div class="text-xs fw-bold text-success-light text-uppercase mb-1">Active Bookings</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.ActiveBookingsCount</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-calendar-check fa-2x"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-info h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2 text-start">
                            <div class="text-xs fw-bold text-info-light text-uppercase mb-1">Available Cars</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.AvailableCarsCount</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-car fa-2x"></i></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card border-left-warning h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2 text-start">
                            <div class="text-xs fw-bold text-warning-light text-uppercase mb-1">Total Customers</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalCustomersCount</div>
                        </div>
                        <div class="col-auto"><i class="fas fa-users fa-2x"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <a asp-controller="Booking" asp-action="CreateByAdmin" class="d-block management-card h-100 p-4 text-center">
                <i class="fas fa-plus-circle fa-3x"></i>
                <h5 class="fw-bold mb-1">Create New Booking</h5>
                <p class="text-muted small">Create a booking on behalf of a customer.</p>
            </a>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a asp-controller="Car" asp-action="Index" class="d-block management-card h-100 p-4 text-center">
                <i class="fas fa-car fa-3x"></i>
                <h5 class="fw-bold mb-1">Manage Cars</h5>
                <p class="text-muted small">Add, edit, or remove cars from the fleet.</p>
            </a>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a asp-controller="Booking" asp-action="ViewAllBookings" class="d-block management-card h-100 p-4 text-center">
                <i class="fas fa-book fa-3x"></i>
                <h5 class="fw-bold mb-1">View All Bookings</h5>
                <p class="text-muted small">View and manage all customer bookings.</p>
            </a>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a asp-controller="Payment" asp-action="Index" class="d-block management-card h-100 p-4 text-center">
                <i class="fas fa-credit-card fa-3x"></i>
                <h5 class="fw-bold mb-1">Manage Payments</h5>
                <p class="text-muted small">View and monitor all payment records.</p>
            </a>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a asp-controller="Report" asp-action="Index" class="d-block management-card h-100 p-4 text-center">
                <i class="fas fa-chart-line fa-3x"></i>
                <h5 class="fw-bold mb-1">Reports</h5>
                <p class="text-muted small">Generate sales and usage reports.</p>
            </a>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <a asp-controller="Admin" asp-action="ManageCustomers" class="d-block management-card h-100 p-4 text-center">
                <i class="fas fa-users-cog fa-3x"></i>
                <h5 class="fw-bold mb-1">Manage Customers</h5>
                <p class="text-muted small">View and manage system Customers.</p>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}