@model CarRentalManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <h3 class="text-danger">Delete Customer Confirmation</h3>
    <h4 class="text-danger">Are you sure you want to delete this customer? This action cannot be undone.</h4>
    <hr />

    <div class="card bg-light border-danger">
        <div class="card-body">
            <h5 class="card-title">Customer Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.CustomerName</dd>

                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteCustomer" method="post" class="mt-3">
        <input type="hidden" asp-for="CustomerID" />
        <input type="submit" value="Yes, Delete" class="btn btn-danger" />
        <a asp-action="ManageCustomers" class="btn btn-secondary">No, Cancel</a>
    </form>
</div>