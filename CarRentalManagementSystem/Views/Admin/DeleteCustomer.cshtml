@model CarRentalManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = null; // This is now a standalone page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnicomTIC Travels</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/CustomerDelete.css" asp-append-version="true" />
</head>
<body>

    <div class="glass-panel-danger p-4 p-md-5">

        <div class="text-center mb-4 warning-header">
            <i class="bi bi-exclamation-triangle-fill text-danger icon-danger mb-3"></i>
            <h1 class="fw-bold text-danger text-uppercase">Confirm Deletion</h1>
            <p class="fs-5 text-white-50">Are you sure you want to delete this customer? This action is irreversible.</p>
            <p class="text-muted small">It is now 9:26 AM on Friday, September 19, 2025 in Sri Lanka.</p>
        </div>

        <div class="summary-box mb-5">
            <h5 class="card-title mb-3">Customer Details</h5>
            <dl class="row">
                <dt class="col-sm-4"><i class="bi bi-person-fill"></i>Full Name</dt>
                <dd class="col-sm-8">@Model.CustomerName</dd>

                <dt class="col-sm-4"><i class="bi bi-person-badge"></i>Username</dt>
                <dd class="col-sm-8">@Model.Username</dd>

                <dt class="col-sm-4"><i class="bi bi-envelope-fill"></i>Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>
            </dl>
        </div>

        <form asp-action="DeleteCustomer" method="post">
            <input type="hidden" asp-for="CustomerID" />
            <div class="d-flex justify-content-center gap-3">
                <a asp-action="ManageCustomers" class="btn btn-secondary px-4 py-2">
                    <i class="bi bi-x-circle me-1"></i>No, Cancel
                </a>
                <input type="submit" value="Yes, Delete Customer" class="btn btn-danger px-4 py-2" />
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>