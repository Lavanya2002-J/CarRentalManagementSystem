@model CarRentalManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container mt-4">
    <h3>Edit Customer: @Model.CustomerName</h3>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditCustomer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CustomerID" />
                <input type="hidden" asp-for="Password" /> @* Password-ஐ மாற்றாமல் இருக்க *@


                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerName" class="form-label"></label>
                        <input asp-for="CustomerName" class="form-control" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="mail" class="form-label"></label>
                    <input asp-for="mail" class="form-control" />
                    <span asp-validation-for="mail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NIC" class="form-label"></label>
                        <input asp-for="NIC" class="form-control" />
                        <span asp-validation-for="NIC" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LicenseNo" class="form-label"></label>
                        <input asp-for="LicenseNo" class="form-control" />
                        <span asp-validation-for="LicenseNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                    <a asp-action="ManageCustomers" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>