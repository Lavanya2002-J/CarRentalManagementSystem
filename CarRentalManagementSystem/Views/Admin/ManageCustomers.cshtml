@model IEnumerable<CarRentalManagementSystem.Models.Customer>

@{
    ViewData["Title"] = "Manage Customers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Customers</h2>
        <a asp-action="AddCustomer" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Customer
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th style="width: 200px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.CustomerID</td>
                                    <td>@customer.CustomerName</td>
                                    <td>@customer.Username</td>
                                    <td>@customer.mail</td>
                                    <td>@customer.PhoneNumber</td>
                                    <td>
                                        <a asp-action="EditCustomer" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="DeleteCustomer" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No customers have registered yet.
                </div>
            }
        </div>
    </div>
</div>