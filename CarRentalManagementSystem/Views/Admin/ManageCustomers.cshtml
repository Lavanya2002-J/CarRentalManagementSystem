@model IEnumerable<CarRentalManagementSystem.Models.Customer>

@{
    ViewData["Title"] = "Manage Customers";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/ManageCustomers.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
        <h2 class="mb-0 fw-bold"><i class="bi bi-people-fill me-2" style="color: #00d9ff;"></i>Manage Customers</h2>
        <a asp-action="AddCustomer" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i> Add New Customer
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-glass-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="glass-panel rounded-3 overflow-hidden">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-glass align-middle mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.CustomerID</td>
                                    <td>@customer.CustomerName</td>
                                    <td>@customer.Username</td>
                                    <td>@customer.mail</td>
                                    <td>@customer.PhoneNumber</td>
                                    <td class="text-center action-buttons">
                                        <a asp-action="EditCustomer" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="DeleteCustomer" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    No customers have registered yet.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}