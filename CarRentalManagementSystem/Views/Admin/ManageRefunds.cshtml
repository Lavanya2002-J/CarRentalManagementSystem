@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Manage Refunds";
}
<div>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>
<link rel="stylesheet" href="~/css/ManageRefunds.css" asp-append-version="true" />

<h2>Cancellation & Refund Requests</h2>
<p>The following bookings have been cancelled by customers and are awaiting refund approval.</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer</th>
            <th>Car</th>
            <th>Total Cost</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingID</td>
                <td>@item.Customer.CustomerName</td>
                <td>@item.Car.CarName - @item.Car.Model</td>
                <td>@item.TotalCost.ToString("C")</td>
                <td>
                    <form asp-action="ApproveRefund" asp-controller="Admin" method="post">
                        <input type="hidden" name="bookingId" value="@item.BookingID" />
                        <button type="submit" class="btn btn-success btn-sm">
                            Approve Refund
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>There are no pending refund requests.</p>
}