@model CarRentalManagementSystem.ViewModels.AdminBookingViewModel

@{
    ViewData["Title"] = "Create New Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    ...
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/AdminBookingCreate.css" asp-append-version="true" />
    
</head>
<body class="booking-page-background">

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7">
                <div class="card shadow-sm">
                    <div class="card-header py-3">
                        <h3 class="mb-0">Create a New Booking 🏎️</h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="CreateByAdmin" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-4">
                                <label asp-for="CustomerID" class="control-label fw-bold mb-2"></label>
                                <select asp-for="CustomerID" class="form-select" asp-items="Model.Customers">
                                    <option value="">-- Select a Customer --</option>
                                </select>
                                <span asp-validation-for="CustomerID" class="text-danger mt-1 d-block"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="CarID" class="control-label fw-bold mb-2"></label>
                                <select asp-for="CarID" class="form-select" asp-items="Model.Cars">
                                    <option value="">-- Select an Available Car --</option>
                                </select>
                                <span asp-validation-for="CarID" class="text-danger mt-1 d-block"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="PickupDate" class="control-label fw-bold mb-2"></label>
                                        <input asp-for="PickupDate" class="form-control" type="date" />
                                        <span asp-validation-for="PickupDate" class="text-danger mt-1 d-block"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="ReturnDate" class="control-label fw-bold mb-2"></label>
                                        <input asp-for="ReturnDate" class="form-control" type="date" />
                                        <span asp-validation-for="ReturnDate" class="text-danger mt-1 d-block"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary w-100">Create Booking</button>
                                <a asp-action="ViewAllBookings" class="btn btn-secondary w-100 mt-2">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>