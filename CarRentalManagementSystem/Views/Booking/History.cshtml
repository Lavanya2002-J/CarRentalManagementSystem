@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "My Booking History";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/BookingHistory.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="page-header mb-4">
        <h2 class="fw-bold"><i class="bi bi-clock-history me-2" style="color: #00d9ff;"></i>My Booking History</h2>
        <p>A record of your past and upcoming journeys. It is now 5:00 AM on Friday in Sri Lanka.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-glass-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-glass-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center mt-5 no-bookings-message">
            <p class="lead">You have not made any bookings yet.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                <i class="bi bi-car-front-fill me-2"></i>Browse Cars & Start a Journey
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model.OrderByDescending(b => b.BookingID))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card booking-card h-100">
                        <img src="@Url.Content("~/uploads/" + booking.Car.CarImageFileName)" class="card-img-top" alt="@booking.Car.CarName" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@booking.Car.CarName - @booking.Car.Model</h5>
                            <ul class="list-group list-group-flush flex-grow-1">
                                <li class="list-group-item"><strong>Pickup:</strong> @booking.PickupDate.ToString("yyyy-MM-dd")</li>
                                <li class="list-group-item"><strong>Return:</strong> @booking.ReturnDate.ToString("yyyy-MM-dd")</li>
                                <li class="list-group-item"><strong>Total Cost:</strong> LKR @booking.TotalCost.ToString("N2")</li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <strong>Status:</strong>
                                    @if (booking.Status == "Paid")
                                    {
                                        <span class="badge bg-success-subtle text-success-emphasis border border-success-subtle">Paid</span>
                                    }
                                    else if (booking.Status == "Pending")
                                    {
                                        <span class="badge bg-warning-subtle text-warning-emphasis border border-warning-subtle">Pending Payment</span>
                                    }
                                    else if (booking.Status == "Cancelled")
                                    {
                                        <span class="badge bg-danger-subtle text-danger-emphasis border border-danger-subtle">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary-emphasis border border-secondary-subtle">@booking.Status</span>
                                    }
                                </li>
                            </ul>

                            <div class="mt-auto pt-3">
                                <div class="d-flex justify-content-center">
                                    @if (booking.Status == "Pending")
                                    {
                                        <a asp-controller="Payment" asp-action="Create"
                                           asp-route-bookingId="@booking.BookingID"
                                           asp-route-amount="@booking.TotalCost"
                                           class="btn btn-success">
                                            <i class="bi bi-credit-card-fill me-1"></i> Pay Now
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.BookingID" class="btn btn-primary">
                                            <i class="bi bi-eye-fill me-1"></i> View Details
                                        </a>
                                    }

                                    @if ((booking.Status == "Pending" || booking.Status == "Paid") && booking.PickupDate >= DateTime.Today)
                                    {
                                        <a asp-controller="Booking" asp-action="Cancel" asp-route-id="@booking.BookingID" class="btn btn-outline-danger">
                                            <i class="bi bi-x-circle me-1"></i> Cancel
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}