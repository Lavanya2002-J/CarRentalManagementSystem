@model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "My Booking History";
}

<div class="container mt-4">
    <h2 class="mb-4">My Booking History</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }


    @if (!Model.Any())
    {
        <div class="text-center">
            <p class="lead">You have not made any bookings yet.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Browse Cars</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var booking in Model.OrderByDescending(b => b.BookingID))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <img src="@Url.Content("~/uploads/" + booking.Car.CarImageFileName)" class="card-img-top" alt="@booking.Car.CarName" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@booking.Car.CarName - @booking.Car.Model</h5>
                            <ul class="list-group list-group-flush flex-grow-1">
                                <li class="list-group-item"><strong>Pickup:</strong> @booking.PickupDate.ToString("yyyy-MM-dd")</li>
                                <li class="list-group-item"><strong>Return:</strong> @booking.ReturnDate.ToString("yyyy-MM-dd")</li>
                                <li class="list-group-item"><strong>Total Cost:</strong> LKR @booking.TotalCost.ToString("N2")</li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <strong>Status:</strong>
                                    @if (booking.Status == "Paid")
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (booking.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending Payment</span>
                                    }
                                    else if (booking.Status == "Cancelled")
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@booking.Status</span>
                                    }
                                </li>
                            </ul>

                            <div class="mt-3">
                                <div class="d-flex justify-content-between">
                                    @if (booking.Status == "Pending")
                                    {
                                        <a asp-controller="Payment" asp-action="Create"
                                           asp-route-bookingId="@booking.BookingID"
                                           asp-route-amount="@booking.TotalCost"
                                           class="btn btn-success flex-grow-1 mr-2">Pay Now</a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.BookingID" class="btn btn-primary flex-grow-1 mr-2">View Details</a>
                                    }

                                    @* Show Cancel button if booking is active and pickup date has not passed *@
                                    @if ((booking.Status == "Pending" || booking.Status == "Paid") && booking.PickupDate >= DateTime.Today)
                                    {
                                        <a asp-controller="Booking" asp-action="Cancel" asp-route-id="@booking.BookingID" class="btn btn-danger flex-grow-1">Cancel</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>