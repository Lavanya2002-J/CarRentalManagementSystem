@model CarRentalManagementSystem.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Add New Car";
}
<div>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/CarCreate.css" asp-append-version="true" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card glass-panel shadow-lg border-0 rounded-3">
                <div class="panel-header text-center py-3">
                    <h4 class="mb-0 fw-bold text-uppercase">
                        <i class="bi bi-car-front-fill me-2"></i> Add New Car
                    </h4>
                </div>
                <div class="card-body p-4 p-md-5">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">

                        @* --- UPDATE THIS LINE ---
                           "All" creates a prominent summary of every error at the top. *@
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }

                        <details open>
                            <summary class="form-section-toggle">
                                <i class="bi bi-card-checklist me-2"></i> Car Details
                            </summary>
                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="CarName" class="form-label fw-semibold"></label>
                                    <input asp-for="CarName" class="form-control" placeholder="e.g., Toyota Prius" />
                                    <span asp-validation-for="CarName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Model" class="form-label fw-semibold"></label>
                                    <input asp-for="Model" class="form-control" placeholder="e.g., 2023" />
                                    <span asp-validation-for="Model" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="FuelType" class="form-label fw-semibold"></label>
                                    <select asp-for="FuelType" class="form-select">
                                        <option value="">-- Select Fuel Type --</option>
                                        <option>Petrol</option>
                                        <option>Diesel</option>
                                        <option>Hybrid</option>
                                        <option>Electric</option>
                                    </select>
                                    <span asp-validation-for="FuelType" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Transmission" class="form-label fw-semibold"></label>
                                    <select asp-for="Transmission" class="form-select">
                                        <option value="">-- Select Transmission --</option>
                                        <option>Manual</option>
                                        <option>Automatic</option>
                                    </select>
                                    <span asp-validation-for="Transmission" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Seats" class="form-label fw-semibold"></label>
                                    <input asp-for="Seats" type="number" class="form-control" placeholder="e.g., 4" />
                                    <span asp-validation-for="Seats" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="DailyRate" class="form-label fw-semibold"></label>
                                    <input asp-for="DailyRate" type="number" step="100" class="form-control" placeholder="e.g., 15000" />
                                    <span asp-validation-for="DailyRate" class="text-danger small"></span>
                                </div>
                            </div>
                        </details>

                        <details>
                            <summary class="form-section-toggle">
                                <i class="bi bi-journal-text me-2"></i> Additional Info
                            </summary>
                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="RegistrationNumber" class="form-label fw-semibold"></label>
                                    <input asp-for="RegistrationNumber" class="form-control" placeholder="e.g., WP-CAR-1234" />
                                    <span asp-validation-for="RegistrationNumber" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Color" class="form-label fw-semibold"></label>
                                    <select asp-for="Color" class="form-select">
                                        <option value="">-- Select Color --</option>
                                        <option>Red</option>
                                        <option>Blue</option>
                                        <option>Black</option>
                                        <option>White</option>
                                        <option>Silver</option>
                                        <option>Gray</option>
                                        <option>Green</option>
                                    </select>
                                    <span asp-validation-for="Color" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="FuelCapacity" class="form-label fw-semibold"></label>
                                    <input asp-for="FuelCapacity" type="number" class="form-control" placeholder="e.g., 40L" />
                                    <span asp-validation-for="FuelCapacity" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="InsurancePolicyNo" class="form-label fw-semibold"></label>
                                    <input asp-for="InsurancePolicyNo" class="form-control" placeholder="Enter policy number" />
                                    <span asp-validation-for="InsurancePolicyNo" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="InsuranceExpiryDate" class="form-label fw-semibold"></label>
                                    <input asp-for="InsuranceExpiryDate" type="date" class="form-control" />
                                    <span asp-validation-for="InsuranceExpiryDate" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Description" class="form-label fw-semibold"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add a short description of the car..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-check form-switch mt-2 fs-5">
                                        <input class="form-check-input" type="checkbox" asp-for="IsAvailable" checked>
                                        <label class="form-check-label" asp-for="IsAvailable">Available for Rent</label>
                                    </div>
                                </div>
                            </div>
                        </details>

                        <details>
                            <summary class="form-section-toggle">
                                <i class="bi bi-cloud-arrow-up-fill me-2"></i> Upload Images
                            </summary>
                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <label asp-for="LogoFile" class="form-label fw-semibold">Company Logo</label>
                                    <input asp-for="LogoFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event, 'logoPreview')" />
                                    <span asp-validation-for="LogoFile" class="text-danger small"></span>
                                    <div id="logoPreview" class="image-preview">
                                        <span>Logo Preview</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CarImageFile" class="form-label fw-semibold">Car Image</label>
                                    <input asp-for="CarImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event, 'carImagePreview')" />
                                    <span asp-validation-for="CarImageFile" class="text-danger small"></span>
                                    <div id="carImagePreview" class="image-preview">
                                        <span>Car Preview</span>
                                    </div>
                                </div>
                            </div>
                        </details>

                        <div class="d-flex justify-content-between mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success px-5 py-2 fw-bold">
                                <i class="bi bi-plus-circle-fill me-1"></i> Add Car
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(event, previewId) {
            const preview = document.getElementById(previewId);
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function () {
                preview.style.backgroundImage = `url(${reader.result})`;
                if (preview.querySelector('span')) {
                     preview.querySelector('span').style.display = 'none'; // Hide the text
                }
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.style.backgroundImage = 'none';
                if (preview.querySelector('span')) {
                    preview.querySelector('span').style.display = 'block'; // Show the text
                }
            }
        }
    </script>
}