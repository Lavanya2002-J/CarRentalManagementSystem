@{
}
@model CarRentalManagementSystem.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-danger text-uppercase fw-bold text-center mb-4">Delete Car</h2>

            <div class="alert alert-warning">
                <strong>Are you sure you want to delete this car?</strong>
            </div>

            <dl class="row">
                <dt class="col-sm-4">Car Name</dt>
                <dd class="col-sm-8">@Model.CarName</dd>

                <dt class="col-sm-4">Model</dt>
                <dd class="col-sm-8">@Model.CarModel</dd>

                <dt class="col-sm-4">Fuel Type</dt>
                <dd class="col-sm-8">@Model.FuelType</dd>

                <dt class="col-sm-4">Transmission</dt>
                <dd class="col-sm-8">@Model.Transmission</dd>

                <dt class="col-sm-4">Daily Rate</dt>
                <dd class="col-sm-8">@Model.DailyRate</dd>

                <dt class="col-sm-4">Branch</dt>
                <dd class="col-sm-8">@Model.Branch</dd>

                @* Show car image if available *@
                @if (!string.IsNullOrEmpty(Model.CarImageFileName))
                {
                    <dt class="col-sm-4">Car Image</dt>
                    <dd class="col-sm-8">
                        <img src="~/uploads/@Model.CarImageFileName" style="max-height: 100px;" />
                    </dd>
                }
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CarId" />
               


                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3-fill me-1"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

