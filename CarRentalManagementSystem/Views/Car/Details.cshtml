@model CarRentalManagementSystem.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Car Details";
}


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container mt-5">
    <!-- Title -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary display-5">Car Details</h2>
        <p class="text-muted fs-5">Explore detailed specifications and check availability</p>
    </div>

    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-5 mx-auto" style="max-width: 900px;">
        <div class="card-body p-5">

            <!-- Car Title & Availability -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold mb-0 text-dark display-6">
                    @Model.CarName <span class="text-muted fs-5">(@Model.CarModel)</span>
                </h3>

                <span class="badge @((Model.IsAvailable=="Yes") ? "bg-success" : "bg-danger") fs-6 py-2 px-3 shadow-sm">
                    @if (Model.IsAvailable == "Yes")
                    {
                        @:Available
                    }
                    else
                    {
                        @:Not Available
                    }
                </span>
            </div>

            <hr class="my-4" />

            <!-- Car Image -->
            @if (!string.IsNullOrEmpty(Model.ExistingCarImagePath))
            {
                <div class="text-center mb-5">
                    <img src="~/uploads/@Model.ExistingCarImagePath"
                         alt="Car Image"
                         class="img-fluid rounded-4 shadow"
                         style="max-height: 350px; object-fit: cover;" />
                </div>
            }

            <!-- Details Grid -->
            <div class="row mb-4 g-4">
                <div class="col-md-6">
                    <p class="fs-5"><i class="bi bi-fuel-pump-fill text-danger me-2"></i><strong>Fuel Type:</strong> @Model.FuelType</p>
                    <p class="fs-5"><i class="bi bi-gear-fill text-primary me-2"></i><strong>Transmission:</strong> @Model.Transmission</p>
                    <p class="fs-5"><i class="bi bi-people-fill text-success me-2"></i><strong>Seats:</strong> @Model.Seats</p>
                    <p class="fs-5"><i class="bi bi-circle-fill text-warning me-2"></i><strong>Color:</strong> @Model.Color</p>
                </div>
                <div class="col-md-6">
                    <p class="fs-5"><i class="bi bi-currency-dollar text-info me-2"></i><strong>Daily Rate:</strong> Rs. @Model.DailyRate.ToString("N2")</p>
                    <p class="fs-5"><i class="bi bi-building text-secondary me-2"></i><strong>Branch:</strong> @Model.Branch</p>
                    <p class="fs-5"><i class="bi bi-upc-scan text-dark me-2"></i><strong>Registration:</strong> @Model.RegistrationNumber</p>
                </div>
            </div>

            <!-- Description -->
            <div class="mb-4">
                <h5 class="fw-bold text-primary">Description</h5>
                <p class="fs-6 text-muted">@Model.Description</p>
            </div>

            <!-- Logo -->
            @if (!string.IsNullOrEmpty(Model.ExistingLogoPath))
            {
                <div class="mb-4 text-center">
                    <h6 class="fw-bold text-secondary">Brand Logo</h6>
                    <img src="~/uploads/@Model.ExistingLogoPath"
                         alt="Logo"
                         class="img-fluid mt-2 shadow-sm rounded"
                         style="max-height: 80px;" />
                </div>
            }

            <!-- Actions -->
            <div class="d-flex justify-content-between mt-5">
                <a asp-action="Index" class="btn btn-outline-secondary fw-bold px-5 py-3 shadow-sm">
                    <i class="bi bi-arrow-left me-2"></i> Back
                </a>
                <a href="/Booking/Create/@Model.CarId" class="btn btn-gradient-primary fw-bold px-5 py-3 text-white shadow-lg" style="background: linear-gradient(45deg, #007bff, #00c6ff);">
                    <i class="bi bi-calendar-check me-2"></i> Book Now
                </a>
            </div>
        </div>
    </div>
</div>
