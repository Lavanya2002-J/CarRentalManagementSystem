@model CarRentalManagementSystem.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Edit Car";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0 text-uppercase">
                        <i class="bi bi-pencil-square me-2"></i>Edit Car
                    </h3>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="CarID" />
                        <input type="hidden" asp-for="ExistingLogoPath" />
                        <input type="hidden" asp-for="ExistingCarImagePath" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="CarName" class="form-label fw-semibold"></label>
                                <input asp-for="CarName" class="form-control" />
                                <span asp-validation-for="CarName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Model" class="form-label fw-semibold"></label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FuelType" class="form-label fw-semibold"></label>
                                <select asp-for="FuelType" class="form-select">
                                    <option value="">-- Select Fuel Type --</option>
                                    <option>Petrol</option>
                                    <option>Diesel</option>
                                    <option>Hybrid</option>
                                    <option>Electric</option>
                                </select>
                                <span asp-validation-for="FuelType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Transmission" class="form-label fw-semibold"></label>
                                <select asp-for="Transmission" class="form-select">
                                    <option value="">-- Select Transmission --</option>
                                    <option>Manual</option>
                                    <option>Automatic</option>
                                </select>
                                <span asp-validation-for="Transmission" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Seats" class="form-label fw-semibold"></label>
                                <input asp-for="Seats" type="number" class="form-control" />
                                <span asp-validation-for="Seats" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DailyRate" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">Rs.</span>
                                    <input asp-for="DailyRate" type="number"  class="form-control" />
                                    <span asp-validation-for="DailyRate" class="text-danger"></span>
                                </div>
                            </div>
                                  
                            <div class="col-md-6">
                                <label asp-for="FuelCapacity" class="form-label fw-semibold"></label>
                                <input asp-for="FuelCapacity" type="number" class="form-control" />
                                <span asp-validation-for="FuelCapacity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Color" class="form-label fw-semibold"></label>
                                <input asp-for="Color" class="form-control" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="RegistrationNumber" class="form-label fw-semibold"></label>
                                <input asp-for="RegistrationNumber" class="form-control" />
                                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="InsurancePolicyNo" class="form-label fw-semibold"></label>
                                <input asp-for="InsurancePolicyNo" class="form-control" />
                                <span asp-validation-for="InsurancePolicyNo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="InsuranceExpiryDate" class="form-label fw-semibold"></label>
                                <input asp-for="InsuranceExpiryDate" type="date" class="form-control" />
                                <span asp-validation-for="InsuranceExpiryDate" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsAvailable">
                                    <label class="form-check-label" asp-for="IsAvailable">
                                        Is Available for Rent
                                    </label>
                                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-semibold"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.ExistingLogoPath))
                                {
                                    <label class="form-label fw-semibold">Current Logo</label>
                                
                                    <br />
                                    <img src="~/uploads/@Model.ExistingLogoPath" class="img-thumbnail" style="max-height: 100px;" alt="Current Logo" />
                                }
                                <label asp-for="LogoFile" class="form-label fw-semibold mt-2">Upload New Logo</label>
                                <input asp-for="LogoFile" type="file" class="form-control" />
                                <span asp-validation-for="LogoFile" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                @if (!string.IsNullOrEmpty(Model.ExistingCarImagePath))
                                {
                                    <label class="form-label fw-semibold">Current Car Image</label>
                                
                                    <br />
                                    <img src="~/uploads/@Model.ExistingCarImagePath" class="img-thumbnail" style="max-height: 100px;" alt="Current Image" />
                                }
                                <label asp-for="CarImageFile" class="form-label fw-semibold mt-2">Upload New Car Image</label>
                                <input asp-for="CarImageFile" type="file" class="form-control" />
                                <span asp-validation-for="CarImageFile" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success px-5">
                                <i class="bi bi-save2 me-2"></i> Update Car
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}