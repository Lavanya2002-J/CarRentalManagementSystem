<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0 text-uppercase">
                        <i class="bi bi-car-front-fill me-2"></i>Edit Car
                    </h3>
                </div>

                <div class="card-body px-5 py-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CarId" />
                        <input type="hidden" asp-for="ExistingLogoPath" />
                        <input type="hidden" asp-for="ExistingCarImagePath" />

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Please correct the errors below.
                            </div>
                        }

                        <div class="row g-4">
                            <!-- Car Name & Model -->
                            <div class="col-md-6">
                                <label asp-for="CarName" class="form-label fw-semibold"></label>
                                <input asp-for="CarName" class="form-control" placeholder="Enter Car Name" />
                                <span asp-validation-for="CarName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CarModel" class="form-label fw-semibold"></label>
                                <input asp-for="CarModel" class="form-control" placeholder="Enter Car Model" />
                                <span asp-validation-for="CarModel" class="text-danger"></span>
                            </div>

                            <!-- Fuel & Transmission -->
                            <div class="col-md-6">
                                <label asp-for="FuelType" class="form-label fw-semibold"></label>
                                <select asp-for="FuelType" class="form-select">
                                    <option value="">-- Select Fuel Type --</option>
                                    <option value="Petrol" selected="@(Model.FuelType=="Petrol")">Petrol</option>
                                    <option value="Diesel" selected="@(Model.FuelType=="Diesel")">Diesel</option>
                                    <option value="Hybrid" selected="@(Model.FuelType=="Hybrid")">Hybrid</option>
                                    <option value="Electric" selected="@(Model.FuelType=="Electric")">Electric</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Transmission" class="form-label fw-semibold"></label>
                                <select asp-for="Transmission" class="form-select">
                                    <option value="">-- Select Transmission --</option>
                                    <option value="Manual" selected="@(Model.Transmission=="Manual")">Manual</option>
                                    <option value="Automatic" selected="@(Model.Transmission=="Automatic")">Automatic</option>
                                </select>
                            </div>

                            <!-- Seats & Rate -->
                            <div class="col-md-6">
                                <label asp-for="Seats" class="form-label fw-semibold"></label>
                                <input asp-for="Seats" type="number" class="form-control" placeholder="Number of Seats" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DailyRate" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="DailyRate" type="number" step="0.01" class="form-control" placeholder="Daily Rate" />
                                </div>
                            </div>

                            <!-- Availability & Branch -->
                            <div class="col-md-6">
                                <label asp-for="IsAvailable" class="form-label fw-semibold">Availability</label>
                                <select asp-for="IsAvailable" class="form-select">
                                    <option value="">-- Select Availability --</option>
                                    <option value="Yes" selected="@(Model.IsAvailable=="Yes")">Yes</option>
                                    <option value="No" selected="@(Model.IsAvailable=="No")">No</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Branch" class="form-label fw-semibold"></label>
                                <select asp-for="Branch" class="form-select">
                                    <option value="">-- Select Branch --</option>
                                    <option value="Colombo" selected="@(Model.Branch=="Colombo")">Colombo</option>
                                    <option value="Jaffna" selected="@(Model.Branch=="Jaffna")">Jaffna</option>
                                    <option value="Kandy" selected="@(Model.Branch=="Kandy")">Kandy</option>
                                    <option value="Galle" selected="@(Model.Branch=="Galle")">Galle</option>
                                </select>
                            </div>

                            <!-- Color & Registration -->
                            <div class="col-md-6">
                                <label asp-for="Color" class="form-label fw-semibold"></label>
                                <select asp-for="Color" class="form-select">
                                    <option value="">-- Select Color --</option>
                                    <option value="Red" selected="@(Model.Color=="Red")">Red</option>
                                    <option value="Blue" selected="@(Model.Color=="Blue")">Blue</option>
                                    <option value="Black" selected="@(Model.Color=="Black")">Black</option>
                                    <option value="White" selected="@(Model.Color=="White")">White</option>
                                    <option value="Silver" selected="@(Model.Color=="Silver")">Silver</option>
                                    <option value="Gray" selected="@(Model.Color=="Gray")">Gray</option>
                                    <option value="Green" selected="@(Model.Color=="Green")">Green</option>
                                    <option value="Yellow" selected="@(Model.Color=="Yellow")">Yellow</option>
                                    <option value="Orange" selected="@(Model.Color=="Orange")">Orange</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RegistrationNumber" class="form-label fw-semibold"></label>
                                <input asp-for="RegistrationNumber" class="form-control" placeholder="Registration No." />
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-semibold"></label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter car description..."></textarea>
                            </div>

                            <!-- Logo -->
                            @if (!string.IsNullOrEmpty(Model.ExistingLogoPath))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Current Logo</label><br />
                                    <img src="~/uploads/@Model.ExistingLogoPath" class="img-thumbnail" style="max-height: 100px;" />
                                </div>
                            }
                            <div class="col-md-6">
                                <label asp-for="LogoFile" class="form-label fw-semibold">Upload New Logo</label>
                                <input asp-for="LogoFile" type="file" class="form-control" />
                            </div>

                            <!-- Car Image -->
                            @if (!string.IsNullOrEmpty(Model.ExistingCarImagePath))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Current Car Image</label><br />
                                    <img src="~/uploads/@Model.ExistingCarImagePath" class="img-thumbnail" style="max-height: 100px;" />
                                </div>
                            }
                            <div class="col-md-6">
                                <label asp-for="CarImageFile" class="form-label fw-semibold">Upload New Car Image</label>
                                <input asp-for="CarImageFile" type="file" class="form-control" />
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success px-5">
                                <i class="bi bi-save2 me-2"></i> Update Car
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

