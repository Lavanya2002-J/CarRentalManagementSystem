@model List<CarRentalManagementSystem.Models.Car>

@{
    ViewData["Title"] = "Car List";
}


<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-car-front-fill me-2 text-primary"></i>Car Management
        </h4>
        <a asp-action="Create" class="btn btn-success btn-sm shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Car
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Car</th>
                            <th>Model</th>
                            <th>Fuel</th>
                            <th>Transmission</th>
                            <th>Rate (Rs)</th>
                            <th>Available</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(car.CarImageFileName))
                                    {
                                        <img src="~/uploads/@car.CarImageFileName" alt="@car.CarName" />
                                    }
                                </td>
                                <td>@car.CarName</td>
                                <td>@car.Model</td>
                                <td>@car.FuelType</td>
                                <td>@car.Transmission</td>
                                <td class="text-success fw-semibold">@car.DailyRate.ToString("N2")</td>
                                <td>
                                    @if (car.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Available</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@car.CarID" class="btn btn-sm btn-info text-white" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@car.CarID" class="btn btn-sm btn-primary text-white" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@car.CarID" class="btn btn-sm btn-danger text-white" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>