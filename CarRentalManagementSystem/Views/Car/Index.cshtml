<div class="container mt-5">
    <!-- Header with Add Car Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-uppercase fw-bold mb-0">
            <i class="bi bi-car-front-fill me-2 text-primary"></i>Car List
        </h2>
        <a asp-action="Create" class="btn btn-success px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add Car
        </a>
    </div>

    <!-- Card Wrapper -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Car</th>
                            <th>Model</th>
                            <th>Fuel</th>
                            <th>Transmission</th>
                            <th>Seats</th>
                            <th>Rate (Rs)</th>
                            <th>Available</th>
                            <th>Branch</th>
                            <th>Color</th>
                            <th>Reg. No</th>
                            <th>Logo</th>
                            <th>Image</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@car.CarName</td>
                                <td>@car.CarModel</td>
                                <td>@car.FuelType</td>
                                <td>@car.Transmission</td>
                                <td class="text-center">@car.Seats</td>
                                <td class="fw-bold text-success">Rs. @car.DailyRate</td>
                                <td>
                                    @if (car.IsAvailable?.ToLower() == "yes")
                                    {
                                        <span class="badge bg-success px-3 py-2">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">Not Available</span>
                                    }
                                </td>
                                <td>@car.Branch</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(car.Color))
                                    {
                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                            <span style="display:inline-block; width:22px; height:18px; background-color:@car.Color; border:1px solid #bbb; border-radius:4px;"></span>
                                            <small>@car.Color</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@car.RegistrationNumber</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(car.LogoFileName))
                                    {
                                        <img src="~/uploads/@car.LogoFileName" width="50" height="30" class="rounded shadow-sm" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(car.CarImageFileName))
                                    {
                                        <img src="~/uploads/@car.CarImageFileName" width="80" height="50" class="img-thumbnail" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@car.CarId"
                                           class="btn btn-sm btn-info fw-bold text-white shadow-lg px-3 py-2">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@car.CarId"
                                           class="btn btn-sm btn-primary fw-bold text-white shadow-lg px-3 py-2">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@car.CarId"
                                           class="btn btn-sm btn-danger fw-bold text-white shadow-lg px-3 py-2">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
