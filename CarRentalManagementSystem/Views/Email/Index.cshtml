 @model IEnumerable<CarRentalManagementSystem.Models.Booking>

@{
    ViewData["Title"] = "Rentals";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/Rentals.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="page-header text-center text-md-start d-md-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold"><i class="bi bi-calendar-check-fill me-2" style="color:#00d9ff;"></i>Rentals Management</h2>
            <p class="text-white-50 mb-0">Send email reminders for vehicle pickups and returns.</p>
        </div>

        <div class="btn-group mt-3 mt-md-0" role="group">
            <a asp-action="SendPickup" class="btn btn-warning">
                <i class="bi bi-box-arrow-up-right me-2"></i>Send Pickup Reminders
            </a>
            <a asp-action="SendReminders" class="btn btn-outline-warning">
                <i class="bi bi-box-arrow-in-left me-2"></i>Send Return Reminders
            </a>
        </div>
    </div>
</div>

    <div class="glass-panel rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-glass table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Return Date</th>
                        <th>Pickup Date</th>
                        <th class="text-center">Return Email Sent</th>
                        <th class="text-center">Pickup Email Sent</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Customer.CustomerName</td>
                            <td>@r.Customer.mail</td>
                            <td>@r.ReturnDate.ToString("yyyy-MM-dd")</td>
                            <td>@r.PickupDate.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                @if (r.ReturnEmailSent)
                                {
                                    <span class="status-yes"><i class="bi bi-check-circle-fill"></i> Yes</span>
                                }
                                else
                                {
                                    <span class="status-no"><i class="bi bi-x-circle-fill"></i> No</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (r.PickupEmailSent)
                                {
                                    <span class="status-yes"><i class="bi bi-check-circle-fill"></i> Yes</span>
                                }
                                else
                                {
                                    <span class="status-no"><i class="bi bi-x-circle-fill"></i> No</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
