@model IEnumerable<CarRentalManagementSystem.Models.Car>
@{
    ViewData["Title"] = "Home";
}

@* External Fonts and Icons (No change) *@
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<link href="~/css/site.css" rel="stylesheet" />

@* ****************************************************** *@
@* *** MODIFIED HERO SECTION WITH SLIDER        *** *@
@* ****************************************************** *@
<div class="hero-section-slider">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
                @* TODO: Replace with your own high-quality images *@
                <img src="https://images.unsplash.com/photo-1594488541255-075a02936496?q=80&w=1974&auto=format&fit=crop" class="d-block w-100" alt="Sri Lankan Beach Drive">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img src="https://images.unsplash.com/photo-1558051014-531e846c2688?q=80&w=2070&auto=format&fit=crop" class="d-block w-100" alt="Car in Sri Lankan Tea Country">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img src="https://images.unsplash.com/photo-1568605117036-5fe5e7185743?q=80&w=2070&auto=format&fit=crop" class="d-block w-100" alt="Modern car on a scenic road">
            </div>
        </div>
    </div>

    <div class="hero-overlay-content">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-lg-6">
                    <div class="hero-text-content text-center text-lg-start animate__animated animate__fadeInLeft">
                        <h5 class="hero-subheading">PREMIUM CAR RENTALS IN SRI LANKA</h5>
                        <h1 class="my-3 display-4 fw-bold">
                            Discover the Island with <span class="highlight">UnicomTIC Travels</span>
                        </h1>
                        <p class="lead mb-4">
                            From pristine beaches to misty mountains, your unforgettable Sri Lankan journey starts with the perfect vehicle.
                        </p>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card hero-search-card animate__animated animate__fadeInRight">
                        <div class="card-body p-4">
                            <h4 class="mb-4 text-center fw-bold">Find Your Perfect Ride</h4>
                            <form asp-controller="Home" asp-action="Index" method="get">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label for="searchString" class="form-label">Car Name or Model</label>
                                        <input type="text" name="searchString" class="form-control" placeholder="e.g., Toyota Aqua" value="@ViewData["CurrentSearch"]" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="seats" class="form-label">Seats</label>
                                        <input type="number" name="seats" class="form-control" placeholder="Any" min="1" value="@ViewData["CurrentSeats"]" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="maxRate" class="form-label">Max Rate /day</label>
                                        <input type="number" name="maxRate" class="form-control" placeholder="e.g., 15000" min="0" value="@ViewData["CurrentMaxRate"]" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="pickupDate" class="form-label">Pickup Date</label>
                                        <input type="date" name="pickupDate" id="pickupDate" class="form-control" value="@ViewData["CurrentPickupDate"]" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="returnDate" class="form-label">Return Date</label>
                                        <input type="date" name="returnDate" id="returnDate" class="form-control" value="@ViewData["CurrentReturnDate"]" />
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid d-lg-flex gap-2 mt-3">
                                            <button type="submit" class="btn btn-glow flex-grow-1">
                                                <i class="bi bi-search me-2"></i>Find Car
                                            </button>
                                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Clear</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* ****************************************************** *@
@* *** AVAILABLE FLEET SECTION (No major changes) *** *@
@* ****************************************************** *@
<div id="fleet-section" class="container my-5 py-5">
    <h2 class="section-title wow">Our Available Fleet</h2>
    <div class="row g-4 mt-4">
        @if (Model.Any())
        {
            @foreach (var car in Model)
            {
                <div class="col-lg-4 col-md-6 wow" data-wow-delay="@((Model.ToList().IndexOf(car) * 0.1))s">
                    <div class="card glow-card h-100">
                        <div class="car-card-content d-flex flex-column">
                            @if (!string.IsNullOrEmpty(car.CarImageFileName))
                            {
                                <img src="~/uploads/@car.CarImageFileName" class="car-img" alt="Car Image" />
                            }
                            <div>
                                <h5 class="car-title">@car.CarName <span class="car-model">@car.Model</span></h5>
                                <div class="my-3">
                                    <span class="badge me-1"><i class="bi bi-fuel-pump me-1"></i> @car.FuelType</span>
                                    <span class="badge me-1"><i class="bi bi-gear me-1"></i> @car.Transmission</span>
                                    <span class="badge"><i class="bi bi-people me-1"></i> @car.Seats Seats</span>
                                </div>
                            </div>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="daily-rate mb-0">Rs. @car.DailyRate.ToString("N0")</h5>
                                    <small class="text-muted">/ day</small>
                                </div>
                                <a asp-action="Create" asp-controller="Booking" asp-route-carId="@car.CarID" class="btn btn-glow shadow-sm">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else if ((bool?)ViewData["SearchAttempted"] == true)
        {
            <div class="col-12 text-center wow">
                <div class="alert alert-info glass-container mt-4">
                    <h4>No Cars Found</h4>
                    <p>We couldn't find any cars that match your search criteria. Please try different filters.</p>
                </div>
            </div>
        }
    </div>
</div>

@* ****************************************************** *@
@* *** WHY CHOOSE US SECTION (No changes)       *** *@
@* ****************************************************** *@
