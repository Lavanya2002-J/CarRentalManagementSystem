@* *** SCRIPTS SECTION (Updated)           *** *@
@* ****************************************************** *@
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // WOW.js-like animation trigger on scroll
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const delay = entry.target.dataset.wowDelay || '0s';
                        entry.target.style.animationDelay = delay;
                        entry.target.style.visibility = 'visible';
                        // Use a custom animation name from data attribute, or default to 'fadeInUp'
                        const animation = entry.target.dataset.wowAnimation || 'fadeInUp';
                        entry.target.classList.add('animate__animated', `animate__${animation}`);
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.1
            });

            const animatedElements = document.querySelectorAll('.wow');
            animatedElements.forEach(el => {
                el.style.visibility = 'hidden'; // Hide elements until they are animated
                observer.observe(el);
            });

            // Set minimum pickup date to today
            const today = new Date().toISOString().split('T')[0];
            const pickupDateEl = document.getElementById("pickupDate");
            if (pickupDateEl) {
                pickupDateEl.setAttribute('min', today);
            }

            // Logic to ensure return date is not before pickup date
            const returnDateEl = document.getElementById("returnDate");

            if (pickupDateEl && returnDateEl) {
                pickupDateEl.addEventListener('change', function () {
                    if (pickupDateEl.value) {
                        returnDateEl.setAttribute('min', pickupDateEl.value);
                        // If return date is already set and is now invalid, clear it or set it to pickup date
                        if (returnDateEl.value && returnDateEl.value < pickupDateEl.value) {
                            returnDateEl.value = pickupDateEl.value;
                        }
                    }
                });
            }
        });
    </script>
}
