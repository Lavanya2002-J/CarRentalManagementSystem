@model IEnumerable<CarRentalManagementSystem.Models.Car>
@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<link href="~/css/site.css" rel="stylesheet" />

<div class="hero-section">
    <div class="container">
        <h1 class="animate__animated animate__fadeInDown">Discover Your Perfect Drive</h1>
        <p class="lead animate__animated animate__fadeInUp animate__delay-1s">
            Handpicked cars tailored for comfort, style, and unforgettable journeys across Sri Lanka.
        </p>
    </div>
</div>

<div class="container mb-5">
    <div class="card p-3 my-4 search-card wow">
        <form asp-controller="Home" asp-action="Index" method="get">
            <div class="row align-items-end g-3">
                <div class="col-lg-3 col-md-6">
                    <label for="searchString" class="form-label fw-bold">Search by Name/Model</label>
                    <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentSearch"]" />
                </div>
                <div class="col-lg-2 col-md-6">
                    <label for="fuelType" class="form-label fw-bold">Fuel Type</label>
                    <select name="fuelType" class="form-select">
                        <option value="">All</option>
                        <option value="Petrol" selected="@(ViewData["CurrentFuelType"]?.ToString() == "Petrol")">Petrol</option>
                        <option value="Diesel" selected="@(ViewData["CurrentFuelType"]?.ToString() == "Diesel")">Diesel</option>
                        <option value="Electric" selected="@(ViewData["CurrentFuelType"]?.ToString() == "Electric")">Electric</option>
                        <option value="Hybrid" selected="@(ViewData["CurrentFuelType"]?.ToString() == "Hybrid")">Hybrid</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-6">
                    <label for="transmission" class="form-label fw-bold">Transmission</label>
                    <select name="transmission" class="form-select">
                        <option value="">All</option>
                        <option value="Automatic" selected="@(ViewData["CurrentTransmission"]?.ToString() == "Automatic")">Automatic</option>
                        <option value="Manual" selected="@(ViewData["CurrentTransmission"]?.ToString() == "Manual")">Manual</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-6">
                    <label for="seats" class="form-label fw-bold">Seats</label>
                    <input type="number" name="seats" class="form-control" min="1" step="1" value="@ViewData["CurrentSeats"]" />
                </div>
                <div class="col-lg-3 col-md-12 d-grid">
                    <button type="submit" class="btn btn-primary fw-bold">Find Car</button>
                </div>
            </div>
        </form>
    </div>
</div>

<section class="why-choose-us">
    <div class="container">
        <h2 class="section-title wow">Why Our Service is the Best</h2>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 wow" data-wow-delay="0.1s">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-collection-fill"></i></div>
                    <h5 class="fw-bold">Wide Vehicle Selection</h5>
                    <p class="text-muted">From compact cars for city trips to spacious SUVs for family adventures in Sri Lanka.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow" data-wow-delay="0.2s">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-tags-fill"></i></div>
                    <h5 class="fw-bold">Transparent Pricing</h5>
                    <p class="text-muted">Enjoy competitive rates with no hidden fees. The price you see is the price you pay.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow" data-wow-delay="0.3s">
                <div class="feature-box">
                    <div class="feature-icon"><i class="bi bi-headset"></i></div>
                    <h5 class="fw-bold">24/7 Customer Support</h5>
                    <p class="text-muted">Our dedicated local team is always here to assist you, ensuring a smooth rental experience.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container my-5">
    <h2 class="section-title wow">Our Available Fleet</h2>
    <div class="row g-4 mt-4">
        @if (Model.Any())
        {
            @foreach (var car in Model)
            {
                <div class="col-lg-4 col-md-6 wow" data-wow-delay="0.1s">
                    <div class="card car-card shadow-sm h-100">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(car.CarImageFileName))
                            {
                                <img src="~/uploads/@car.CarImageFileName" class="card-img-top car-img" alt="Car Image" />
                            }
                            @if (!string.IsNullOrEmpty(car.LogoFileName))
                            {
                                <img src="~/uploads/@car.LogoFileName" class="car-logo" alt="Logo" />
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="fw-bold text-dark">@car.CarName <span class="text-muted fw-normal">(@car.Model)</span></h5>
                            <div class="mb-3">
                                <span class="badge bg-light text-dark me-1 p-2"><i class="bi bi-fuel-pump"></i> @car.FuelType</span>
                                <span class="badge bg-light text-dark me-1 p-2"><i class="bi bi-gear"></i> @car.Transmission</span>
                                <span class="badge bg-light text-dark me-1 p-2"><i class="bi bi-people"></i> @car.Seats Seats</span>
                            </div>
                            <div class="mt-auto">
                                <h5 class="fw-bold text-success mb-3">Rs. @car.DailyRate.ToString("N2") <small class="text-muted fw-normal">/ day</small></h5>
                                <a asp-action="Create" asp-controller="Booking" asp-route-carId="@car.CarID" class="btn btn-primary w-100 fw-bold shadow-sm">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else if ((bool?)ViewData["SearchAttempted"] == true)
        {
            <div class="col-12 text-center wow">
                <div class="alert alert-info mt-4">
                    <h4>No Cars Found</h4>
                    <p>We couldn't find any cars that match your search criteria. Please try different filters.</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Get the animation delay from the data attribute, if it exists
                        const delay = entry.target.dataset.wowDelay || '0s';
                        entry.target.style.animationDelay = delay;

                        entry.target.style.visibility = 'visible';
                        // Determine animation type based on a data attribute, or default to fadeInUp
                        const animation = entry.target.dataset.wowAnimation || 'fadeInUp';
                        entry.target.classList.add('animate__animated', `animate__${animation}`);

                        observer.unobserve(entry.target); // Animate only once
                    }
                });
            }, {
                threshold: 0.1 // Trigger when 10% of the element is visible
            });

            // Find all elements with the 'wow' class and observe them
            const animatedElements = document.querySelectorAll('.wow');
            animatedElements.forEach(el => observer.observe(el));
        });
    </script>
}