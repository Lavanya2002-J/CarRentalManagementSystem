@model CarRentalManagementSystem.ViewModels.PaymentViewModel
@{
    ViewData["Title"] = "Complete Payment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Secure Payment</h2>
                    <p class="mb-0">Final step to confirm your booking for the @Model.CarName</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 border-end">
                            <h4 class="mb-3">Booking Summary</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between">
                                    <strong>Car:</strong> <span>@Model.CarName (@Model.CarModel)</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <strong>Pickup:</strong> <span>@Model.PickupDate.ToString("MMM dd, yyyy")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <strong>Return:</strong> <span>@Model.ReturnDate.ToString("MMM dd, yyyy")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <strong class="text-success">Total Amount:</strong>
                                    <span class="fw-bold text-success fs-5">LKR @Model.Amount.ToString("N2")</span>
                                </li>
                            </ul>
                        </div>

                        <div class="col-md-6">
                            <h4 class="mb-3">Select Payment Method</h4>
                            <form asp-action="Create" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input type="hidden" asp-for="BookingID" />
                                <input type="hidden" asp-for="Amount" />

                                <div class="form-group mb-4">
                                    <label asp-for="PaymentMethod" class="form-label fw-bold"></label>
                                    <select asp-for="PaymentMethod" asp-items="@Model.PaymentMethods" class="form-select form-select-lg">
                                        <option value="">-- Select a method --</option>
                                    </select>
                                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                                </div>

                                <div class="alert alert-info">
                                    <p class="mb-0"><i class="fas fa-info-circle"></i> For 'Cash on Pickup', you will pay at our counter when you collect the car. Your booking will be confirmed now.</p>
                                </div>

                                <div class="d-grid mt-4">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-lock"></i> Confirm & Pay LKR @Model.Amount.ToString("N2")
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>