@model CarRentalManagementSystem.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Make Payment";
}

<h2 class="text-primary">Make Payment</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="card p-4 shadow-sm">
        <input type="hidden" asp-for="BookingID" />
        <input type="hidden" asp-for="Amount" />

        <div class="form-group mb-3">
            <label asp-for="Amount" class="form-label"></label>
            <input asp-for="Amount" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="CardNumber" class="form-label"></label>
            <input asp-for="CardNumber" class="form-control" />
            <span asp-validation-for="CardNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NameOnCard" class="form-label"></label>
            <input asp-for="NameOnCard" class="form-control" />
            <span asp-validation-for="NameOnCard" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ExpiryMonth" class="form-label"></label>
                <input asp-for="ExpiryMonth" class="form-control" type="number" min="1" max="12" />
                <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ExpiryYear" class="form-label"></label>
                <input asp-for="ExpiryYear" class="form-control" type="number" min="2024" max="2030" />
                <span asp-validation-for="ExpiryYear" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CVV" class="form-label"></label>
            <input asp-for="CVV" class="form-control" type="password" maxlength="4" />
            <span asp-validation-for="CVV" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PaymentMethod" class="form-label"></label>
            <select asp-for="PaymentMethod" class="form-control">
                <option value="">-- Select Method --</option>
                <option value="Credit Card">Credit Card</option>
                <option value="Debit Card">Debit Card</option>
                <option value="PayPal">PayPal</option>
            </select>
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="SaveCard" class="form-check-input" />
            <label asp-for="SaveCard" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-success">Pay Now</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}