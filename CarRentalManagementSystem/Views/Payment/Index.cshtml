@model IEnumerable<CarRentalManagementSystem.Models.Payment>

@{
    ViewData["Title"] = "Payment History";
}
<div>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/PaymentIndex.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="page-header mb-4">
        <h2 class="fw-bold"><i class="bi bi-wallet2 me-2" style="color: #00d9ff;"></i>Payment History</h2>
        <p>Review all transactions and payment statuses.</p>
    </div>

    <div class="glass-panel rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-glass text-center align-middle mb-0">
                <thead>
                    <tr>
                        <th>Payment ID</th>
                        <th>Booking ID</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Transaction ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var payment in Model)
                        {
                            <tr>
                                <td>@payment.PaymentID</td>
                                <td>@payment.BookingID</td>
                                <td class="fw-bold text-success">LKR @payment.Amount.ToString("N2")</td>
                                <td>@payment.PaymentDate.ToString("g")</td>
                                <td>@payment.PaymentMethod</td>
                                <td>
                                    @if (payment.PaymentStatus == "Completed")
                                    {
                                        <span class="badge bg-success-subtle text-success-emphasis border border-success-subtle">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger-emphasis border border-danger-subtle">@payment.PaymentStatus</span>
                                    }
                                </td>
                                <td>@payment.TransactionID</td>
                                <td>
                                    <a asp-controller="Payment" asp-action="Confirmation" asp-route-id="@payment.PaymentID" class="btn btn-sm btn-info text-white" title="View Details">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="no-items-row">
                            <td colspan="8">No payments found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}