@model IEnumerable<CarRentalManagementSystem.Models.Payment>

@{
    ViewData["Title"] = "Payments List";
}

<h2 class="text-primary">Payments List</h2>

<table class="table table-bordered table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Payment ID</th>
            <th>Booking ID</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Method</th>
            <th>Status</th>
            <th>Transaction ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.PaymentID</td>
                    <td>@payment.BookingID</td>
                    <td>LKR @payment.Amount.ToString("N2")</td>
                    <td>@payment.PaymentDate.ToString("g")</td>
                    <td>@payment.PaymentMethod</td>
                    <td>
                        @if (payment.PaymentStatus == "Completed")
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@payment.PaymentStatus</span>
                        }
                    </td>
                    <td>@payment.TransactionID</td>
                    <td>
                        <a asp-controller="Payment" asp-action="Confirmation" asp-route-id="@payment.PaymentID" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No payments found.</td>
            </tr>
        }
    </tbody>
</table>