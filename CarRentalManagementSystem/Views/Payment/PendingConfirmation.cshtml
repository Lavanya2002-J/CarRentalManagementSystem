@model CarRentalManagementSystem.Models.Booking
@{
    ViewData["Title"] = "Booking Reserved";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/BookingReserved.css" asp-append-version="true" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="glass-panel p-4 p-md-5">
                <div class="text-center mb-5 reservation-header">
                    <i class="bi bi-hourglass-split icon-pending mb-3"></i>
                    <h1 class="display-4 mt-3">Booking Reserved!</h1>
                    <p class="lead">
                        @if (ViewBag.SuccessMessage != null)
                        {
                            @ViewBag.SuccessMessage
                        }
                        else
                        {
                            <span>Your car has been reserved. Please complete payment upon pickup.</span>
                        }
                    </p>
                    
                </div>

                <div class="booking-summary">
                    <p class="booking-id text-center">Booking ID: @Model.BookingID</p>

                    <ul class="details-list">
                        <li>
                            <i class="bi bi-car-front-fill"></i>
                            <div>
                                <strong>Vehicle</strong>
                                <span>@Model.Car.CarName (@Model.Car.Model)</span>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-calendar-arrow-right"></i>
                            <div>
                                <strong>Pickup Date</strong>
                                <span>@Model.PickupDate.ToString("dddd, MMMM dd, yyyy")</span>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-calendar-arrow-left"></i>
                            <div>
                                <strong>Return Date</strong>
                                <span>@Model.ReturnDate.ToString("dddd, MMMM dd, yyyy")</span>
                            </div>
                        </li>
                        <hr class="border-secondary opacity-25 my-3" />
                        <li>
                            <i class="bi bi-wallet2"></i>
                            <div>
                                <strong>Total Cost</strong>
                                <span class="total-cost">LKR @Model.TotalCost.ToString("N2")</span>
                            </div>
                        </li>
                        <li>
                            <i class="bi bi-info-circle-fill"></i>
                            <div>
                                <strong>Status</strong>
                                <span class="badge bg-warning-subtle text-warning-emphasis border border-warning-subtle">@Model.Status</span>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="mt-5 text-center actions">
                    <a asp-controller="Booking" asp-action="History" class="btn btn-primary">
                        <i class="bi bi-clock-history me-1"></i> View My Bookings
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light ms-2">
                        <i class="bi bi-search me-1"></i> Find Another Car
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}