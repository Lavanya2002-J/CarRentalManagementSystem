@model CarRentalManagementSystem.Models.Booking
@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container text-center mt-5">
    <div class="py-5">
        <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
        <h1 class="display-4 mt-3">Booking Confirmed!</h1>
        <p class="lead">Thank you, @Model.Customer.CustomerName. Your booking has been successfully processed.</p>
        <hr>
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card text-start">
                    <div class="card-header">
                        <strong>Booking Reference ID: @Model.BookingID</strong>
                    </div>
                    <div class="card-body">
                        <p><strong>Car:</strong> @Model.Car.CarName (@Model.Car.CarModel)</p>
                        <p><strong>Pickup Date:</strong> @Model.PickupDate.ToString("dddd, MMMM dd, yyyy")</p>
                        <p><strong>Return Date:</strong> @Model.ReturnDate.ToString("dddd, MMMM dd, yyyy")</p>
                        <p class="fw-bold fs-5"><strong>Total Paid:</strong> LKR @Model.TotalCost.ToString("N2")</p>
                        <p>A confirmation has been sent to your email address. Please have your Booking ID ready when you come to pick up the car.</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-controller="Booking" asp-action="History" class="btn btn-primary">View My Booking History</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Find Another Car</a>
                </div>
            </div>
        </div>
    </div>
</div>