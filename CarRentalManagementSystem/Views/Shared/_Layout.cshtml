@*
*@
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalManagementSystem</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRentalManagementSystem.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-car-front-fill me-2"></i> UnicomTIC Rentals
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("Username")))
                        {
                            <li class="nav-item">
                                <a href="/Profile" class="nav-link user-profile-pill">
                                    <i class="bi bi-person-circle"></i>
                                    <span>Welcome, @HttpContextAccessor.HttpContext.Session.GetString("Username")</span>
                                </a>
                            </li>

                            @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2"></i> Admin Dashboard
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Dashboard">
                                        <i class="bi bi-layout-text-sidebar-reverse"></i> My Dashboard
                                    </a>
                                </li>
                            }

                            
                            <li class="nav-item">
                                <a class="btn btn-hover-glow" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-person-plus"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="fleet-section">
                                    <i class="bi bi-car-front"></i> Our Fleet
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="why-us-section">
                                    <i class="bi bi-check2-circle"></i> Why Us
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="faq-section">
                                    <i class="bi bi-question-circle"></i> FAQ
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-hover-glow me-2" asp-area="" asp-controller="Account" asp-action="CustomerLogin">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-hover-glow" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                            
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-white-50 pt-5 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3 text-white">
                        <i class="bi bi-car-front-fill me-2 text-primary"></i> UnicomTIC Rentals
                    </h5>
                    <p>
                        Your premier choice for luxury and affordable car rentals. We're dedicated to providing you with a seamless and high-quality rental experience.
                    </p>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">Privacy Policy</a>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3 text-white">Contact Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                            123 Auto Avenue, Grand City, 45678
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill me-2 text-primary"></i>
                            info@UnicomTIC Rentals.com
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill me-2 text-primary"></i>
                            +1 (555) 123-4567
                        </li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3 text-white">Follow Us</h5>
                    <div class="d-flex social-icons">
                        <a href="https://facebook.com/thenu.thena.2025" class="btn btn-outline-light me-2 rounded-circle">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://x.com/AM02Fernando?t=jW5rfa4iLkSdo6UoCbD6SA&s=08" class="btn btn-outline-light me-2 rounded-circle">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="https://www.instagram.com/_thenushan_?igsh=aWN3N2lvcjZwYTFj&utm_source=qr" class="btn btn-outline-light me-2 rounded-circle">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="https://www.linkedin.com/in/marshake-fernando-7869872b3?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app" class="btn btn-outline-light me-2 rounded-circle">
                            <i class="bi bi-linkedin"></i>
                        </a>
                        <a href="https://wa.me/94728011787" class="btn btn-outline-light me-2 rounded-circle">
                            <i class="bi bi-whatsapp"></i>
                        </a>
                        <a href="https://www.tiktok.com/@@theanushan?_t=ZS-8zuuyFteCyA&_r=1" class="btn btn-outline-light me-2 rounded-circle">
                            <i class="bi bi-tiktok"></i>
                        </a>
                    </div>
                </div>
            </div>

            <hr class="text-white-50 my-3">
            <div class="text-center">
                <span class="text-white-50">&copy; 2025 - UnicomTIC Rentals. All Rights Reserved.</span>
                <a href="#" class="text-warning" data-bs-toggle="offcanvas" data-bs-target="#socialOffcanvas">
                    Follow Us
                </a>
            </div>
        </div>


        <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="socialOffcanvas" aria-labelledby="offcanvasLabel">
            <div class="offcanvas-header border-bottom">
                <h5 class="offcanvas-title" id="offcanvasLabel">Follow Us</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="d-grid gap-3">
                    <a href="https://wa.me/94728011787" target="_blank" class="btn btn-success">
                        <i class="bi bi-whatsapp"></i> WhatsApp
                    </a>
                    <a href="https://facebook.com/thenu.thena.2025" target="_blank" class="btn btn-primary">
                        <i class="bi bi-facebook"></i> FaceBook
                    </a>
                    <a href="https://www.instagram.com/_thenushan_?igsh=aWN3N2lvcjZwYTFj&utm_source=qr" target="_blank" class="btn btn-danger">
                        <i class="bi bi-instagram"></i> Instagram
                    </a>
                    <a href="https://www.tiktok.com/@@theanushan?_t=ZS-8zuuyFteCyA&_r=1" target="_blank" class="btn btn-light text-dark">
                        <i class="bi bi-tiktok"></i> TikTok
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>